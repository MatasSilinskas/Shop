@model WEB.Models.PurchaseList
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
@using (Html.BeginForm())
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">My Dashboard</li>
    </ol>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <form class="form-inline my-2 my-lg-0 mr-lg-2">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>DateModel</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" name="submitButton" value="Show My Statement" class="btn btn-default" />
                            <div>
                                @Html.TextBoxFor(model => model.name)
                                <input type="submit" name="submitButton" value="Filter By Shop" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </li>
    </ol>
    if (Model != null)
    {<table>
            <a> Your statement: </a>

            @for (int i = 0; i < Model.listOfProducts.Count; i++)
            {
                @:
                <tr></tr>
                <td>
                    <lable>@Model.listOfProducts[i].ItemName</lable>
                    <lable>@Model.listOfProducts[i].ShopName</lable>
                    <lable>@Model.listOfProducts[i].Price</lable>
                    <lable>@Model.listOfProducts[i].Date.ToString("dd/MM/yyyy")</lable>
                </td>
            }
    <lable>
        Your full expenses: @Model.fullPrice 
    </lable>
        </table>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>


}
